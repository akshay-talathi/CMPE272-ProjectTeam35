<form class="form-horizontal" action="/register" method="POST">
  <fieldset>
    <div id="legend" style="margin-left: 20px;" align="center">
      <legend class="">Register User</legend>
    </div>
    <div class="control-group">
      <!-- FirstName -->
      <label class="control-label" for="firstname">First Name</label>
      <div class="controls">
        <input type="text" id="firstname" name="firstname" placeholder="First Name" class="input-xlarge" required>
      </div>
    </div>
    <div class="control-group">
      <!-- LastName -->
      <label class="control-label" for="lastname">Last Name</label>
      <div class="controls">
        <input type="text" id="lastname" name="lastname" placeholder="Last Name" class="input-xlarge" required>
      </div>
    </div>
 
    <div class="control-group">
      <!-- E-Mail -->
      <label class="control-label" for="email">Email ID</label>
      <div class="controls">
        <input type="email" id="email" name="email" placeholder="Email ID" class="input-xlarge" required>
        <p class="help-block">Please provide your E-mail</p>
      </div>
    </div>
 
    <div class="control-group">
      <!-- Password-->
      <label class="control-label" for="password">Password</label>
      <div class="controls">
        <input type="password" id="password" name="password" placeholder="Password" class="input-xlarge" pattern="[A-Za-z0-9]{8,16}" required>
        <p class="help-block">Note: The password must be at least 8 and no more than 16 characters long and consist of alphanumeric characters.</p>
      </div>
    </div>
 
    <div class="control-group">
      <!-- Contact -->
      <label class="control-label" for="Contact">Contact</label>
      <div class="controls">
        <input type="text" id="contact" name="contact" placeholder="Contact" class="input-xlarge" pattern="[1-9]{1}[0-9]{9}" required>
                <p class="help-block">Note: Contact should be 10 digit number</p>
        
      </div>
    </div>

        <div class="control-group">
      <!-- Button -->
      <div class="controls">
        <button class="btn btn-success" value="save" name="Submit" >Register</button>
      	<button type="button" class="btn btn-danger" name="cancel" onClick = "location.href = '/organizations';">Cancel</button>
      </div>
    </div>
  </fieldset>
</form>
