                            <div class="block-content collapse in">
                                <div class="span12">
                                   <div class="table-toolbar">
                                      <div class="btn-group">
                                         <button class="btn btn-success" onClick="location.href = '/users/register';">Add New User <i class="icon-plus icon-white"></i></button></a>
                                      </div>
                                   </div>
                                    <hr>
                                    <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example2">
                                        <thead>
                                            <tr>
                                                <th width="50px">No</th>
                                                <th>User ID</th>
                                                <th>First Name</th>
                                                <th>Last Name</th>
                                                <th>Email</th>
                                                <th>Status</th>
                                                <th width="120px">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if(data.length){ 
                                              for(var i = 0;i < data.length;i++) { %>
                                                <tr>
                                                  <td><%=(i+1)%></td>
                                                  <td><%=data[i].user_id%></td>
                                                  <td><%=data[i].firstname%></td>
                                                  <td><%=data[i].lastname%></td>
                                                  <td><%=data[i].email%></td>
                                                  <% if(data[i].isActive == 1) {%>
                                                  <td>Active</td><%} else {%>
                                                  <td>Inactive</td><% }%>
                                                  <td>
                                                    <div class="btn-group">
                                                      <button type="button" class="btn btn-warning" onClick="location.href = '/organizations/<%=data[i].org_id%>/users/edit/<%=data[i].user_id%>';">Edit</button>
                                                       <button type="button" class="btn btn-danger" onClick="location.href = '/organizations/<%=data[i].org_id%>/users/delete/<%=data[i].user_id%>';">Deactivate</button>
                                                      <!--<a class="a-inside edit" href="/organizations/<%=data[i].org_id%>/users/edit/<%=data[i].user_id%>">Edit</a>
                                                     
                                                      <a class="a-inside delete" href="/organizations/<%=data[i].org_id%>/users/delete/<%=data[i].user_id%>">Deactivate</a>-->
                                                     
                                                  </td>
                                              </tr>
                                          <% }
                                          }
                                          else{ %>
                                            <tr>
                                              <td colspan="3">No user</td>
                                            </tr>
                                        <% } %>
                                        </tbody>
                                      </table>
